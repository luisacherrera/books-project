<div class='main-container'>
  <h2>What to read next?</h2>
  
      <form action='/books/search' method="POST">
          <div class='field'>
            <input class= 'filter-books' type="text" name = 'search' placeholder="Your search...">
          </div>
          <div class='field'>
            <label for='type'>Filter by: </label>
            <input id='search-book' type='radio' name='type' value='BOOK'>Book
            <input id='search-author' type='radio' name='type' value='AUTHOR'>Author
            <input id='search-owner' type='radio' name='type' value='PUBLISHER'>Publisher
          </div>
          <button class='submit'>Search</button>
    </form>

  <% booksData.forEach(function (book){%>
    <a class='listedbooks-link' href='/books/<%= book._id %>'>
    <div class='listedbooks-container'>
      <div class='listedbooks-image'>
        <% if (book.picture) {%>
        <div class='thumbnail-container'>
            <img class='thumbnail' src='<%= book.picture %>'>
        </div>
        <%}%>
        <% if (book.picPath) {%>
        <div class='thumbnail-container'>
            <img class='thumbnail' src='<%= book.picPath %>'>
        </div>
        <%}%>   
      </div>
      <div class='listedbooks-info'>
        <h3><%= book.title %></h3>
        <h4><%= book.author %></h4>
      </div>
    </div>
    </a>
  <%})%>
  <% if (typeof message != 'undefined') { %>
    <div class='error-message'><%= message %></div>
  <% } %>
  <button class='submit' onclick="goBack()">Go Back</button>  
</div>

<script>
  function goBack () {
    window.history.back();
  }
</script>
