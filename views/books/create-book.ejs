<div class='main-container'>
  <h2>Add a new book</h2>

  <form action='/books/create' method='POST'  enctype="multipart/form-data">
      <div class='field'>
        <div class='col-25'>
          <label for='title'> Title: </label>
        </div>
        <div class='col-75'>
          <input type='text' name='title' id='title'/>
        </div>
      </div>
      <div class='field'>
        <div class='col-25'>
          <label for='author'> Author: </label>
        </div>
        <div class='col-75'>
          <input type='text' name='author' id='author'/>
        </div>
      </div>
      <div class='field'>
          <div class='col-25'>
            <label for='description'>Description: </label>
          </div>
          <div class='col-75'>
            <textarea name='description' id='description' placeholder='Description for your book'></textarea>
          </div>
        </div>
        <div class='field'>
          <div class='col-25'>
            <label for='photo'>Upload cover: </label>
          </div>
          <div class='col-75'>
            <input type="file" name="photo">
          </div>
        </div>
      <div class='control'>
        <button class='submit' type='submit'>Add book</button>
      </div>
    </form>

    <button class='submit' onclick="goBack()">Go Back</button>
</div>

<script>
  function goBack () {
    window.history.back();
  }
</script>